<div class="body">
  <div class="container">
  	<div class="row">
  	  <div class="col-xs-3">
        <h2>User info</h2>

        <%= attachment_image_tag @user, :profile_image, format: 'jpeg',size:"60x60", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
          	<tr></tr>
          	<tr>
          	  <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <% if @user.id == current_user.id %>
            <%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
          <div class="field row">
          	<label for="book_title">Title</label>
            <%= f.text_field :title, class: 'col-xs-12' %>
          </div>

          <div class="field row">
          	<label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class: 'col-xs-12' %>
          </div>

          <div class="actions row">
          	<%= f.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-9">
      	<h1>Book detai</h1>

        <table class="table">
          <thead>
          	<tr>
          	  <th></th>
              <th>Titl</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
            <% if @user == current_user %>
          	  <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg',size:"60x60", fallback: "no_image.jpg" %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn-sm btn-success' %></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm"=>"本当に消しますか？", class: 'btn-sm btn-danger' %></td>
              <% else %>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg',size:"60x60", fallback: "no_image.jpg" %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
             <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>






