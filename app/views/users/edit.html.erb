<div class="body">
  <div class="container">
  	<p class="notice"></p>

  	<h2>User info</h2>

    <% if @user.errors.any? %>
  	  <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>

  	  <ul>
  	  	<% @user.errors.full_messages.each do |massage| %>
  	  	  <li><%= massage %></li>
  	  	<% end %>
  	  </ul>
  	<% end %>

    <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image %>
    </div>

    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: :true %>
    </div>

    <div class="actions">
      <%= f.submit "Update User" %>
    </div>

    <% end %>
  </div>
</div>

<footer>
  <div class="container">
  	<div class="row">
  	  <div class="col-xs-3 col-xs-offset-9">
  	  	<p>CopyRight Infratop.inc</p>
  	  </div>
  	</div>
  </div>
</footer>