<div class="body">
  <div class="container">
  	<p class="notice"></p>
  	<h2>User info</h2>
    <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image %>
    </div>

    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: :true %>
    </div>

    <div class="actions">
      <%= f.submit "Update User" %>
    </div>

    <% end %>
  </div>
</div>